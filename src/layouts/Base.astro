---
import {
  IconBrandGithub,
  IconBrandTwitter,
  IconUser,
} from '@tabler/icons-react';
import { SITE_TITLE } from '../consts';
import Button from '../components/Button.astro';

import '@fontsource-variable/ubuntu-sans-mono';

interface Props {
  title: string;
  description: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->

    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
  </head>

  <body class="mx-auto max-w-screen-md px-4 text-slate-800">
    <header
      class="bg-primary-100 shadow-primary-200 -mx-4 mb-1 flex items-center justify-between rounded-b-3xl p-6 shadow-[0_4px]"
    >
      <h2>
        <a href="/" class="text-primary-600 font-mono text-3xl font-semibold">
          {SITE_TITLE}
        </a>
      </h2>
      <nav class="flex gap-2">
        <Button class="text-primary-500 p-1.5" href="/about">
          <IconUser />
        </Button>
        <Button
          class="text-twitter p-1.5"
          href="https://x.com/eyr1n"
          target={'_blank'}
          rel={'noopener noreferrer'}
        >
          <IconBrandTwitter />
        </Button>
        <Button
          class="text-github p-1.5"
          href="https://github.com/eyr1n"
          target={'_blank'}
          rel={'noopener noreferrer'}
        >
          <IconBrandGithub />
        </Button>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer
      class="border-primary-200 border-t-4 border-dashed py-8 text-slate-400"
    >
      &copy; <span class="font-mono">2024 eyrin.jp</span>
    </footer>
  </body>
</html>
